<div class="container px-5 px-sm-0">
  <div class="row">

     <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/form', book: @book %>
  </div>





  <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
<table class="table">
<td>
<%= link_to user_path(@books.user.id) do %>
 <%= image_tag @books.user.get_profile_image(100,100)%>
 <P><%= @user.name %></P>
<% end %>
</td>
<td>
    <%= link_to @books.title, book_path(@books.id) %>
</td>

<td>
    <%= @books.body %>
</td>

<td>
  <% if @books.user == current_user %>

    <%= link_to 'Edit', edit_book_path(@books.id), class:"btn btn-sm btn-success edit" %>

    <%= link_to 'Destroy', book_path(@books), class:"btn btn-sm btn-danger destroy", method: :delete,"data-confirm" => "本当に削除しますか？" %>
  <% end %>
</td>
  </table>

  </div>

  </div>
  </div>